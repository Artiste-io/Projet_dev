{% extends 'base.html.twig' %}

{% block title %}Hello CommandesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    {% for aCommande in getArtiste %}
        <div>
            {% if aCommande.0.titre == '' %}
                <h1>sans titre</h1>
            {% else %}
                <h1>{{ aCommande.0.titre }}</h1>
            {% endif %}
            <img src="{{ aCommande.0.image }}"style="width: 50%"/>

            <div>
                <p>{{ aCommande.1.username }}</p>
                <img src="{{ aCommande.1.photo }}" style="width: 20%"/>
            </div>

        </div>
    {% endfor %}
</div>
{% endblock %}
